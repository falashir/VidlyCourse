@model  IEnumerable<VidlyCourse.Models.Movie>

<h2>
    Movies
</h2>
@if (!Model.Any())
{
    <text> There is no one has rented this movie </text>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
            </tr>
        </thead>


        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



